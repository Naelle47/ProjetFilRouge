@{
    Layout = null; // C'est le layout principal
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="keywords" content="" />
    <title>@ViewBag.Title - Nivo</title>

    <link rel="stylesheet" href="~/assets/css/style.css" />

    <!-- Google Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Inter:ital,opsz,wght@0,14..32,100..900;1,14..32,100..900&family=Playfair+Display:ital,wght@0,400..900;1,400..900&display=swap"
          rel="stylesheet" />
</head>
<body>
    <header class="primary-header">
        <div class="container">
            <div class="nav-wrapper">
                <a href="~/" id="logo">
                    <div id="logo | fw-bold">
                        NIVO - The Gaming Bar
                    </div>
                </a>
                <button class="mobile-nav-toggle"
                        aria-controls="primary-navigation"
                        aria-expanded="false">
                    <img class="icon-hamburger"
                         src="~/assets/img/icon-hamburger.svg"
                         alt=""
                         aria-hidden="true" />
                    <img class="icon-close"
                         src="~/assets/img/icon-close.svg"
                         alt=""
                         aria-hidden="true" />
                    <span class="visually-hidden">Menu</span>
                </button>
                <nav class="primary-navigation" id="primary-navigation">
                    <ul aria-label="Primary" role="list" class="nav-list">
                        <!-- <li><a href="~/">Home</a></li>
                        <li><a href="~/Games">Games</a></li>
                        <li><a href="~/Events">Events</a></li>
                        <li><a href="~/Contact">Contact</a></li> -->
                        <li><a asp-controller="Home" asp-action="Index">Home</a></li>
                        <li><a asp-controller="Games" asp-action="Index">Games</a></li>
                        <li><a asp-controller="Events" asp-action="Index">Events</a></li> <!-- page non existante mais possiblement intégrée si j'ai le temps.-->
                        <li><a asp-controller="Contact" asp-action="Index">Contact</a></li>
                    </ul>
                </nav>
            </div>
        </div>
    </header>

    <main>
        @RenderBody()
    </main>

    <footer class="primary-footer | padding-block-600">
        <div class="container">
            <nav class="footer-nav">
                <ul aria-label="Footer" role="list">
                    <li><a asp-controller="Home" asp-action="Index">Home</a></li>
                    <li><a asp-controller="Games" asp-action="Index">Games</a></li>
                    <li><a asp-controller="Events" asp-action="Index">Events</a></li> <!-- page non existante mais possiblement intégrée si j'ai le temps.-->
                    <li><a asp-controller="Contact" asp-action="Index">Contact</a></li>
                    <li><a asp-controller="Home" asp-action="Privacy">Privacy Policy</a></li>
                </ul>
            </nav>
        </div>
        <div class="end-footer">
            <p class="primary-footer__copyright">
                Nivo. <br />Copyright @DateTime.Now.Year. All Rights Reserved
            </p>
        </div>
    </footer>

    <script src="~/assets/js/main.js" defer></script>
</body>
</html>
