@model ProjetFilRouge.Models.Utilisateur

@{
    ViewData["Title"] = "Login/Register - ProjetFilRouge";
    Layout = "_Layout";

    var activeForm = ViewData["ActiveForm"] as string ?? "SignIn";
    var validateMessage = ViewData["ValidateMessage"] as string;
}

<section class="authentification | padding-block-900">
    <div class="container">
        <div class="auth-box even-columns" id="auth-container">

            <!-- LEFT PANEL -->
            <div class="left-panel">
                <h1 class="fs-primary-heading">Hello!</h1>
                <p>
                    Welcome to ProjetFilRouge. Please sign in with your account
                    or create a new one to continue.
                </p>

                <div class="switch-btns">
                    <button class="@(activeForm == "SignIn" ? "active" : "")" id="loginBtn">Sign In</button>
                    <button class="@(activeForm == "SignUp" ? "active" : "")" id="signupBtn">Sign Up</button>
                </div>
            </div>

            <!-- RIGHT PANEL -->
            <div class="right-panel">

                <!-- VALIDATION FEEDBACK -->
                @if (!string.IsNullOrEmpty(validateMessage))
                {
                    <div class="validation-message">@validateMessage</div>
                }

                <!-- SIGN IN FORM -->
                <div class="form login-form @(activeForm == "SignIn" ? "active" : "")" id="formlogin">
                    <form asp-action="SignIn" asp-controller="Access" method="post">
                        <input type="hidden" name="returnUrl" value="@ViewData["ReturnUrl"]" />

                        <div asp-validation-summary="All" class="error-message"></div>

                        <div>
                            <input asp-for="Email" placeholder="Email" />
                            <span asp-validation-for="Email" class="error-message"></span>
                        </div>

                        <div>
                            <input asp-for="Password" type="password" placeholder="Mot de passe" />
                            <span asp-validation-for="Password" class="error-message"></span>
                        </div>

                        <button type="submit">Login</button>
                    </form>
                </div>

                <!-- SIGN UP FORM -->
                <div class="form signup-form @(activeForm == "SignUp" ? "active" : "")" id="formsignup">
                    <form asp-action="SignUp" asp-controller="Access" method="post">

                        <div asp-validation-summary="All" class="error-message"></div>

                        <div>
                            <input asp-for="Username" placeholder="Nom" />
                            <span asp-validation-for="Username" class="error-message"></span>
                        </div>

                        <div>
                            <input asp-for="Email" placeholder="Email" />
                            <span asp-validation-for="Email" class="error-message"></span>
                        </div>

                        <div>
                            <input asp-for="Password" type="password" placeholder="Mot de passe" />
                            <span asp-validation-for="Password" class="error-message"></span>
                        </div>

                        <button type="submit">Sign Up</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

    <script>
        // Switch between forms
        const loginBtn = document.getElementById('loginBtn');
        const signupBtn = document.getElementById('signupBtn');
        const loginForm = document.getElementById('formlogin');
        const signupForm = document.getElementById('formsignup');

        loginBtn.addEventListener('click', () => {
            loginBtn.classList.add('active');
            signupBtn.classList.remove('active');
            loginForm.classList.add('active');
            signupForm.classList.remove('active');
        });

        signupBtn.addEventListener('click', () => {
            signupBtn.classList.add('active');
            loginBtn.classList.remove('active');
            signupForm.classList.add('active');
            loginForm.classList.remove('active');
        });
    </script>
}
