@model ProjetFilRouge.Models.Utilisateur
@{
    ViewData["Title"] = "Authentification";

    var validateMessage = ViewData["ValidateMessage"]?.ToString();
}

<main>
    <section class="authentification | padding-block-900">
        <div class="container">
            <!-- FORM CONTENT -->
            <div class="auth-box even-columns" id="auth-container">
                <div class="left-panel">
                    <h1 class="fs-primary-heading">Hello !</h1>
                    <p>
                        Welcome to our brand new website. To view our content, you need
                        to create an account using the Sign Up form. Or be logged in
                        your account.
                    </p>


                    @if (!string.IsNullOrEmpty(validateMessage))
                    {
                        <div class="validation-message">@validateMessage</div>
                    }
                </div>

                <div class="right-panel">
                    <!-- SignIn Form -->
                    <div class="form login-form" id="formlogin">
                        <form asp-action="SignIn" asp-controller="Access" method="post">
                            @Html.AntiForgeryToken()

                            <label asp-for="Email" class="visually-hidden"></label>
                            <input asp-for="Email" placeholder="Email" />
                            <span asp-validation-for="Email" class="text-danger"></span>

                            <label asp-for="Password" class="visually-hidden"></label>
                            <input asp-for="Password" placeholder="Password" />
                            <span asp-validation-for="Password" class="text-danger"></span>

                            <button type="submit">Sign In</button>
                            <div class="social-login">
                                <button type="button">Google</button>
                                <button type="button">Facebook</button>
                            </div>
                        </form>
                    </div>

                    
                    
                </div>
            </div>
            <!-- END FORM CONTENT-->
        </div>
    </section>
</main>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />

}
