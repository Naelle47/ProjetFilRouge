@model List<Utilisateur>
@{
    ViewData["Title"] = "Utilisateurs";
}

<div>
    <h1>Utilisateurs</h1>
    <table>
        <thead>
            <tr>
                <th>ID</th>
                <th>Nom</th>
                <th>Prénom</th>
                <th>Email</th>
                <th>Date d'inscription</th>
                <th>Rôle</th>
                <th>Détail utilisateur</th>
            </tr>
        </thead>
        <tbody>
            @foreach (Utilisateur user in @Model!)
            {
                <tr>
                    <td>@(user.utilisateurid_pk)</td>
                    <td>@(user.username)</td>
                    <td>@(user.email)</td>
                    <td>@(user.dateinscription)</td>
                    <td>@((user.role != null) ? user.role.name : "")</td>
                    <td><a asp-controller="Utilisateurs" asp-action="Detail" asp-route-id="@(user.utilisateurid_pk)">Détail</a></td>
                </tr>
            }
        </tbody>
    </table>
</div>