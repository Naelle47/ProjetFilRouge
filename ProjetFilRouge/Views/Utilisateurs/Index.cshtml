@model IEnumerable<ProjetFilRouge.Models.Utilisateur>

@{
    ViewData["Title"] = "Liste des utilisateurs";
}

<h2>@ViewData["Title"]</h2>

<p>
    <a href="@Url.Action("Create")">Ajouter un utilisateur</a>
</p>

<table border="1" cellpadding="5">
    <tr>
        <th>Nom</th>
        <th>Email</th>
        <th>Admin</th>
        <th>Actions</th>
    </tr>

    @foreach (var utilisateur in Model)
    {
        <tr>
            <td>@utilisateur.Username</td>
            <td>@utilisateur.Email</td>
            <td>@(utilisateur.Admin ? "Oui" : "Non")</td>
            <td>
                <a href="@Url.Action("Details", new { id = utilisateur.UtilisateurId })">Détails</a> |
                <a href="@Url.Action("Edit", new { id = utilisateur.UtilisateurId })">Modifier</a> |
                <a href="@Url.Action("Delete", new { id = utilisateur.UtilisateurId })">Supprimer</a>
            </td>
        </tr>
    }
</table>
