
@model List<Jeu>
@{
    ViewData["Title"] = "Catalogue des Jeux";
}
<main>
    <section class="game-gallery | padding-block-900">
        <h1 class="fs-primary-heading text-center margin-bottom-700">
            Catalogue des Jeux
        </h1>
        <div class="container">
            <div class="even-columns">
                @foreach (var jeu in Model)
                {
                    <div class="game-card">
                        <a asp-controller="Jeux"
                           asp-action="Detail"
                           asp-route-id="@jeu.JeuId"
                           class="card-btn"
                           title="Voir détails du jeu">
                            <span class="material-icons">arrow_forward</span>
                            <span class="btn-text">Voir détail</span>
                        </a>
                        <div class="card-img">
                            <img src="@jeu.Image" alt="vignette du jeu @jeu.Titre" />
                        </div>
                        <div class="card-body">
                            <h3 class="card-title">@jeu.Titre</h3>
                            <div class="card-text">
                                <p>@jeu.Description</p>
                                <!-- <ul>
                                    <li><strong>Joueurs :</strong> @jeu.NombreJoueursRecommandes</li>
                                    <li><strong>Durée :</strong> @jeu.TempsJeuMoyen</li>
                                    <li><strong>Ajouté le :</strong> @jeu.DateAjout.ToString("dd/MM/yyyy")</li>
                                </ul> -->
                                <span class="badge" 
                                   style="display: inline-block; background-color: var(--clr-primary-500); color: var(--clr-accent-400);
                                   padding: 0.25rem 0.6rem; border-radius:999px; margin-top:0.5rem;">
                                   @jeu.Categories?
                                   </span>
                            </div>
                        </div>
                    </div>
                }
            </div>
            <!-- <div class="pagination">
                <button class="page-btn prev button" disabled>Previous</button>
                <div class="page-numbers"></div>
                <button class="page-btn next button">Next</button> </div> -->

            <span class="button">Load More</span>

            </div>
        
    </section>
    <section>
        <div class="container">
           <div class="even-columns">
                <div><h2 class="fs-secondary-heading margin-top-900">Soumettre un jeu</h2>
                    <p>
                        Lorem ipsum dolor ...
                    </p>
                    </div>
                <div class="form-content">
                    <!-- Espace pour le Form -->

                </div>
           </div>
        </div>
    </section>
    <section class="cta | padding-block-700 bg-accent-400 text-neutral-100">
        <div class="container">
            <div class="even-columns vertical-align-center-md">
                <div class="flow">
                    <p class="fs-primary-heading fw-bold">Take part in the next big event !</p>
                    <p>Click the button to see all upcoming events and tournaments.</p>
                </div>
                <div class="justify-self-end-md">
                    <span class="button" data-type="inverted">Count me in</span>
                </div>
                </div>
        </div>
    </section>
</main>
