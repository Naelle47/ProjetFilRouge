@model Jeu
@{
    ViewData["Title"] = "Détail du jeu - " + Model.Titre;
}
<main>
    <!-- En-tête du jeu -->
    <section class="game-header">
        <div class="container">
            <div class="game-image">
                <img src="@Model.Image" alt="Jeu : @Model.Titre" />
            </div>
            <div class="game-info">
                <h1>@Model.Titre</h1>
                <p><i class="fa-solid fa-users"></i> @Model.NombreJoueursRecommandes joueurs</p>
                <p><i class="fa-regular fa-clock"></i> @Model.TempsJeuMoyen min</p>
                <p>
                    <i class="fa-solid fa-tags"></i>
                    @string.Join(", ", Model.Categories)
                </p>
                <div class="button-group">
                    <a class="button">
                        <i class="fa-regular fa-heart"></i> Ajouter aux favoris
                    </a>
                    <a class="button button-secondary">
                        <i class="fa fa-bookmark" aria-hidden="true"></i> Réserver ce jeu
                    </a>
                </div>
            </div>
        </div>
    </section>

    <!-- Description -->
    <section class="game-description">
        <div class="container">
            <h2>Description complète</h2>
            <p>@Model.Description</p>
            <div class="highlight">
                <h3>Pourquoi on aime ce jeu chez Nivo ?</h3>
                <p>Ambiance conviviale, accessible aux débutants et très fun en groupe !</p>
            </div>
        </div>
    </section>

